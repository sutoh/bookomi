<div class="tag-area">
  <table><tbody><tr>
    <td class="first-info">
      <div class="tip common-black"><span>登録タグ</span>
        <a class="btn btn-default btn-xs" href='#tag-modal' data-placement="left" data-toggle="modal" data-target="#tag-modal">
          <i class="fa fa-tags"></i>
        </a>
      </div>
    </td>
    <td><div id="tag-block">
      <ul class="tag-list">
        <% tweet.manga.tags.each do |tag| %>
          <li><%= link_to tag.name, tag_destroy_manga_path(tweet.manga, tag: tag), method: :delete, remote: true %></li>
        <% end %>
      </ul>
    </div></td>
  </tr></tbody></table>
</div>

<% content_for(:modal) do %>
  <%= render partial: 'tags/tag_form', locals: { manga: tweet.manga } %>
<% end %>
